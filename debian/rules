#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	#
	mkdir -p $(CURDIR)/debian/vscripts/usr/local/bin
	cp -r $(CURDIR)/perl 			$(CURDIR)/debian/vscripts/usr/local/bin
	cp -r $(CURDIR)/python 			$(CURDIR)/debian/vscripts/usr/local/bin
	cp -r $(CURDIR)/bash 			$(CURDIR)/debian/vscripts/usr/local/bin

	echo "perl commands..."
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/awkc.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/devetpet.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/ggrep.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/googlaj.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/jsonparse.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/lstr.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/myhead.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/printbin.pl
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/perl/filetime.pl

	echo "python commands..."
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/python/editdijara.py
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/python/grepy 
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/python/grepymoje 
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/python/recursivepie 

	echo "bash commands..."
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/bakrename.bash
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/grepdijara
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/grp
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/mygitdiff.bash
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/myvalgrind
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/remotegvim
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/simboli
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/spakujpromene
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/svnbc3
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/svndiff
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/svnst
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/gitst
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/range.bash
	chmod 755 $(CURDIR)/debian/vscripts/usr/local/bin/bash/isitrunning.bash

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
